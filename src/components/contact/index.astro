---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO COMPONENTS
import ContactInformation from "@/components/contact/information/index.astro"
import Footer from "@/components/common/footer/index.astro"
import Header from "@/components/common/header/index.astro"

// IMPORTS ASTRO ATOMS
import HeadingTwo from "@/atoms/heading/two/extrabold/index.astro"
import Link from "@/atoms/link/target-blank/index.astro"

// GET ASTRO PROPS
const {

    data,
    ENVIRONMENT

} = Astro.props

---
<Header
    ENVIRONMENT={ ENVIRONMENT }
/>
<Container>
    <section class="md:py-20 space-y-4 md:space-y-12 relative z-10 bg-white h-screen pt-32 md:pt-52">
        <HeadingTwo>{ data.title }</HeadingTwo>
        <section>
            <ContactInformation
                aria_label={ data.email }
                href={ "mailto:" + data.email }
                title={ data.email }
            />
            <ContactInformation
                aria_label={ data.contact_number }
                href={ "tel:" + data.contact_number }
                title={ data.contact_number }
            />
            <div class="group w-fit">
                <Link href={ data.linkedin_link } aria_label={ data.linkedin_title }>
                    <span class="text-2xl md:text-4xl font-light font-helvetica_neue">
                        { data.linkedin_title }
                    </span>
                </Link>
                <div class="w-0 bg-faf_black group-hover:w-full h-[1px] transition-width duration-200 ease-in"></div>
            </div>
        </section>
    </section>
</Container>
<Footer />
