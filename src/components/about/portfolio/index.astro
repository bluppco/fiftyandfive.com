---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import HeadingTwo from "@/atoms/heading/two/extrabold/index.astro"
import Paragraph4xl from "@/atoms/paragraph/4xl/index.astro"
import PictureInternalContain from "@/atoms/picture/internal/contain/index.astro"

const data = {

    title: "our portfolio.",
    description: "clients past and present.",
    cover: "/delete-later/portfolio.png"

}

---
<Container>
    <section class="space-y-4 py-20">
        <HeadingTwo>{ data.title }</HeadingTwo>
        <Paragraph4xl>{ data.description }</Paragraph4xl>
        <div class="w-full h-full">
            <PictureInternalContain
                alternative_text={ data.title }
                source={ data.cover }
            />
        </div>
    </section>
</Container>
