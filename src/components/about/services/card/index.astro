---

// IMPORTS ASTRO ATOMS
import HeadingThreeDarkGray from "@/atoms/heading/three/dark-gray/index.astro"
import PictureInternalContain from "@/atoms/picture/internal/contain/index.astro"

// GET ASTRO PROPS
const {

    alternative_text,
    description,
    phonetic_notation,
    source,
    title

} = Astro.props

---
<div>
    <div class="size-72">
        <PictureInternalContain
            alternative_text={ alternative_text }
            source={ source }
        />
    </div>
    <HeadingThreeDarkGray>{ title }</HeadingThreeDarkGray>
    <p class="text-faf_dark_gray text-2xl font-helvetica_neue font-extralight">{ phonetic_notation }</p>
    <p class="text-faf_dark_gray text-base font-helvetica_neue font-light">{ description }</p>
</div>
