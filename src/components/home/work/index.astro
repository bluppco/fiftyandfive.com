---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import Video from "@/atoms/video/index.astro"

// GET ASTRO PROPS
const {

    CDN,
    data,
    PROJECT

} = Astro.props

---
<Container>
    <section class="grid md:grid-cols-3 gap-4 md:gap-5 pb-10 md:pb-32 relative z-10 bg-white h-full">
        {

            data.videos.map( ( value ) => {

                return(
                    <Video>
                        <source src={ CDN + PROJECT + "/" + value.file } type="video/mp4" />
                    </Video>
                )

            })

        }
    </section>
</Container>
