---

// RUNTIME
const runtime = Astro.locals.runtime

const {

    CDN,
    ENDPOINT,
    ENVIRONMENT,
    PROJECT

} = runtime.env
const data = await aboutAPI( ENVIRONMENT, ENDPOINT )

// API
import { aboutAPI } from "@/api/about/index.js"

const {

	about,
	page,
    meta,
    portfolio

} = data

// IMPORTS LAYOUT COMPONENTS
import Layout from "@/layouts/layout/index.astro"

// ABOUT COMPONENT
import About from "@/components/about/index.astro"

---
<Layout
	description={ meta.description }
	image={ meta.cover }
	title={ meta.title }
>
	<About
        CDN={ CDN }
        data={ about }
        ENVIRONMENT={ ENVIRONMENT }
        page={ page }
        portfolio={ portfolio }
        PROJECT={ PROJECT }
    />
</Layout>
