---

// RUNTIME
const runtime = Astro.locals.runtime

const {

    CDN,
    ENDPOINT,
    ENVIRONMENT,
    PROJECT

} = runtime.env
const data = await homeAPI( ENVIRONMENT, ENDPOINT )

// API
import { homeAPI } from "@/api/home/index.js"

const {

	home_data,
	meta

} = data

// IMPORTS LAYOUT COMPONENTS
import Layout from "@/layouts/layout/index.astro"

// HOME COMPONENT
import Home from "@/components/home/index.astro"

---
<Layout
	CDN={ CDN }
	description={ meta.description }
	image={ meta.cover }
	PROJECT={ PROJECT }
	title={ meta.title }
>
	<Home
		CDN={ CDN }
		ENDPOINT={ ENDPOINT }
		ENVIRONMENT={ ENVIRONMENT }
		home_data={ home_data }
		PROJECT={ PROJECT }
	/>
</Layout>
