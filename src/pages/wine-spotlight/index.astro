---

// RUNTIME
const runtime = Astro.locals.runtime

const {

	ENDPOINT,
	ENVIRONMENT

} = runtime.env
const data = await spotlightAPI( ENVIRONMENT, ENDPOINT )

// API
import { spotlightAPI } from "@/api/spotlight/index.js"

const {

	spotlight

} = data

// IMPORTS LAYOUT COMPONENTS
import Layout from "@/layouts/layout/index.astro"

// IMPORTS ASTRO COMPONENTS
import Spotlight from "@/components/spotlight/index.astro"

---
<Layout
	description=""
	image=""
	title="Wine Spotlight - Fifty & Five"
>
	<Spotlight
		data={ spotlight }
        ENVIRONMENT={ ENVIRONMENT }
    />
</Layout>
